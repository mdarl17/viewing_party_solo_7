<%= button_to "Discover", discover_path(@user.id), class: "btn discover", method: :get %>
<%= button_to "Create a Viewing Party", "", class: "btn new-party", method: :get %>
<h1 class="hdr-1"><%= @facade.title %></h1>
<p>Vote Average: <%= @facade.vote %></p>
<p>Runtime: <%= @facade.runtime %> minues</p>
<p>Genres: <%= @facade.genres.join(", ") %>
<p class="hdr-sum">Summary</p>
<p class="summary"><%= @facade.summary %></p>
<br><br>
<h3 style="text-decoration: underline">Cast</h3>
<% @facade.cast.each do |member| %>
  <p><%= "#{member.character}: #{member.actor}" %></p>
<% end  %>
<br>
<h3 style="text-decoration: underline">Reviews</h3>
<p><%= @facade.reviews[:count] %> Reviews</p>
<% @facade.reviews[:rev_hash].each do |review| %>
  <p>Reviewer: <%= review.author %></p>
  <p>Username: <%= review.username %></p>
  <p>Reviewer Rating: <%= review.rating %></p>
  <p><%= link_to review.url, review.url %></p>
  <p><%= review.content %></p>
  <br>
<% end %>


