<h1>New <span class="title"><%= @movie.title %></span> Viewing Party</h1>
<br>
  <%= form_with url: create_viewing_party_path(user_id: @user.id, movie_id: @movie.id), data: { turbo: false }, local: true do |form| %> 
    <div class="flex-container">
      <div class="text-field">
        <%= form.label :duration, "Duration of Party" %> <%= form.text_field :duration, class: "txt-box" %>
      </div>
      <div class="text-field">
        <%= form.label :date, "date" %> <%= form.text_field :date, class: "txt-box" %>
      </div>
      <div class="text-field">
        <%= form.label :start_time, "Start Time" %> <%= form.text_field :start_time, class: "txt-box" %>
      </div>
    </div>
      <br><br>
      <h3>Invite Other Users!</h3>
      <% 3.times do |n| %>
        <p><%= form.text_field "guest_#{n+1}" %></p>
      <% end %>
      <br>
    <%= form.submit "Create Party" %>
  <% end %>